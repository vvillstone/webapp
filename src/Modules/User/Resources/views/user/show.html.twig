{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Détails de l'Utilisateur</h4>
                        <div>
                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('admin_users_index') }}" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Informations Personnelles</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">ID :</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom complet :</th>
                                    <td><strong>{{ user.fullName }}</strong></td>
                                </tr>
                                <tr>
                                    <th>Prénom :</th>
                                    <td>{{ user.firstName }}</td>
                                </tr>
                                <tr>
                                    <th>Nom :</th>
                                    <td>{{ user.lastName }}</td>
                                </tr>
                                <tr>
                                    <th>Email :</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Informations Système</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Rôle :</th>
                                    <td>
                                        {% if user.role == 'admin' %}
                                            <span class="badge bg-danger">Administrateur</span>
                                        {% elseif user.role == 'employee' %}
                                            <span class="badge bg-warning">Employé</span>
                                        {% else %}
                                            <span class="badge bg-info">Client</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Statut :</th>
                                    <td>
                                        {% if user.isActive %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Créé le :</th>
                                    <td>{{ user.createdAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                                {% if user.updatedAt %}
                                <tr>
                                    <th>Modifié le :</th>
                                    <td>{{ user.updatedAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                                {% endif %}
                                {% if user.lastLoginAt %}
                                <tr>
                                    <th>Dernière connexion :</th>
                                    <td>{{ user.lastLoginAt|date('d/m/Y à H:i') }}</td>
                                </tr>
                                {% endif %}
                            </table>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <div>
                            <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}" 
                                  style="display: inline-block;"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer l'utilisateur
                                </button>
                            </form>
                        </div>
                        <div>
                            <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                                <i class="fas fa-list"></i> Liste des utilisateurs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
